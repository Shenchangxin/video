<view class="page"><view style="{{'height:'+(statusBarHeight+'px')+';'}}"></view><view class="big-search-wrapper"><image class="header-right-search icon-search" src="/static/images/icon-back.png" data-event-opts="{{[['tap',[['back']]]]}}" bindtap="__e"></image><view class="search-box"><view class="search-box-left"><image class="header-right-search search-image" src="/static/images/icon-search.png"></image></view><view><input class="search-input" type="text" model="{{searchContent}}" placeholder="请输入内容~" maxlength="10" data-event-opts="{{[['input',[['typingContent',['$event']]]]]}}" value="{{searchContent}}" bindinput="__e"/></view><view class="search-box-right"><image class="scan-image" src="/static/images/icon-scan-qrcode.png" data-event-opts="{{[['tap',[['scan']]]]}}" bindtap="__e"></image></view></view><view data-event-opts="{{[['tap',[['doSearch',['$event']]]]]}}" style="align-self:center;" bindtap="__e"><text class="search-btn">搜索</text></view></view><view><block wx:for="{{historyList}}" wx:for-item="h" wx:for-index="index" wx:key="index"><view class="history-item-wrapper"><view data-event-opts="{{[['tap',[['searchByHistory',['$0'],[[['historyList','',index]]]]]]]}}" class="time-and-text" bindtap="__e"><image class="time-image" src="/static/images/icon-time.png"></image><text class="history-text">{{h}}</text></view><image class="delete-image" src="/static/images/icon-delete.png" data-event-opts="{{[['tap',[['removeHistoryItem',[index]]]]]}}" bindtap="__e"></image></view></block><view data-event-opts="{{[['tap',[['removeAllHistory']]]]}}" class="clear-all-wrapper" bindtap="__e"><text class="clear-all">清除所有搜索记录</text></view></view></view>